FROM node:latest

COPY . /myapp
WORKDIR /myapp

RUN npm install

ARG DATABASE_URL
ENV DATABASE_URL=$DATABASE_URL

ARG REDIS_URL
ENV REDIS_URL=$REDIS_URL

ARG REDIS_HOST
ENV REDIS_HOST=$REDIS_HOST

ARG REDIS_PASSWORD
ENV REDIS_PASSWORD=$REDIS_PASSWORD

ARG REDIS_PORT
ENV REDIS_PORT=$REDIS_PORT

CMD npm start
